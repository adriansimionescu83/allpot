
  <! -------------- recipes cards -------------- >
<div class="container mt-4">

  <div class="row">
  <h2>User ingredients: </h2>
  <% @user.ingredients.each do |ingredient| %>
    <li><%= ingredient.name %></li>
  <% end %>
  <h2>Can user call API?: <strong><%= @user.call_api_recipes %></h2></strong>
  <h2>last API Call: <strong><%= @last_call_time %></h2></strong>
    <% @recipes.each do |recipe| %>
      <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
        <div class="card justify-content-center">

          <div class="card-body">
          <%= link_to recipe_path(recipe) do %>
            <h5 class="card-title"><strong><%= recipe.title %></strong></h5>
            <h5 class="card-title"><strong><%= recipe.updated_at %></strong></h5>
          <% end %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
