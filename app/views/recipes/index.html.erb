<div class="bkg-mid-blue">
  <div class="container main-title">
    <h1 class="recipes-header">You can make <strong><span class="recipe-count"><%= @recipes.count %> recipes</span></strong> with the <strong><span class="recipe-count"><%= current_user.ingredients.count %></span></strong> ingredients in your pantry!</h1>
  </div>
</div>

<div class="container mt-5">
  <div class="row row-cols-1 row-cols-md-4 g-4">

  <! -------------- recipes cards -------------- >

    <% @recipes.each do |recipe| %>

      <div class="col">
        <%= link_to recipe_path(recipe), class: "text-decoration-none" do %>
          <div class="card h-100">

            <div class="embed-responsive embed-responsive-16by9">
              <img src="<%= recipe.image_url %>" class="card-img-top" alt="...">
            </div>

            <div class="card-body">
              <h5 class="card-title"><%= recipe.title %></h5>
              <p>Ingredients Used: </p> <% recipe.used_ingredients.each do |used_ingredient| %>
                  <li><%= used_ingredient %></li>
                <% end %>
              <hr>
              <p>Ingredients Missed: </p> <% recipe.missed_ingredients.each do |missed_ingredient| %>
                <li><%= missed_ingredient %></li>
              <% end %>
              <hr>
              <p>Updated at <strong><%= recipe.updated_at %></p></strong>
              <p>Status <strong><%= recipe.status %></p></strong>
              <p>Latest result? <strong><%= recipe.is_latest_result %></p></strong>

            </div>



            <div class="d-flex card-footer">
              <p class="card-text"><span><i class="fas fa-hourglass-half"></i></span> <%= recipe.ready_in_minutes %> mins</p>
              <p><strong><%= recipe.used_ingredients_count %> / <%= (recipe.used_ingredients_count + recipe.missed_ingredients_count) %></strong> in stock</p>
            </div>

          </div>
        <% end %>
      </div>

    <% end %>
  </div>


  <! -------------- tests -------------- >


  <h6>API Call link: <strong><%= @url %></h6></strong>
  <h6>last API Call: <strong><%= @last_call_time %></h6></strong>
</div>
